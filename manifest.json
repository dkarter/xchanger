{
  "manifest_version": 2,
  "name": "Xchanger",
  "version": "1.0",
  "description":
    "Converts currency rates on any webpage to your chosen currency",
  "icons": { "48": "icons/icon.svg" },
  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": {
      "16": "icons/icon.svg",
      "32": "icons/icon.svg"
    }
  },

  "permissions": ["storage", "activeTab"]
}
